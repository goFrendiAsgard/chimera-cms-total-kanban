<div width="100%">
  <% let inputId = fieldName + (new Date()).getTime() + Math.floor((Math.random() * 100000)) %>
  <textarea id="<%= inputId %>" rowId="<%= row._id %>" style="display:none;"><%- value %></textarea>
  <div id="<%= inputId %>PresentationContainer" width="100%"><%= value %></div>
</div>
<script src="/total-kanban/markdown/lib/markdown.js"></script>
<script>
  $(document).ready(function() {
    let html = markdown.toHTML($('#<%= inputId %>').html())
    $('#<%= inputId %>PresentationContainer').html(html)
  })
</script>