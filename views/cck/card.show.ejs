<script src="/ace-builds/src-min-noconflict/ace.js"></script>
<script src="/js/cck-form.js"></script>
<script src="/ejs/ejs.min.js"></script>

<div style="display:none">
  <textarea id="cw-cckState"><%= JSON.stringify(cckState) %></textarea>
  <textarea id="cw-initial-data"><%= JSON.stringify({metadata, results}) %></textarea>
  <textarea id="cw-row-template"><%- include ../../cck/default.show/rowTemplate.ejs %></textarea>
  <textarea id="cw-pagination-template"><%- include ../../cck/default.show/paginationTemplate.ejs %></textarea>
</div>

<!-- Caption -->
<h3><%='caption' in cckState && cckState.caption ? cckState.caption : cckState.schemaName %></h3>

<div style="margin-bottom:1em">
  <!-- Custom HTML components -->
  <%- cckState._customHtmlComponents ? cckState._customHtmlComponents : '' %>
  <!-- Search form -->
  <%- include ../../cck/default.show/searchForm.ejs %>
</div>

<table class="table cw-table">
  <!-- Table header-->
  <%- include ../../cck/default.show/tableHeader.ejs %>
  <tbody id="cw-result-container" style="max-height:23em;"><!-- Results will be loaded here --></tbody>
</table>

<div id="cw-pagination"><!-- Pagination will be loaded here --></div>

<%- include ../../cck/default.show/deleteModal.ejs %>

<script src="/js/cck-form-show.js"></script>
<script>
  cwAjaxifyShow()
</script>